@model FleetPrimeTestUI.Models.EventViewData;
@{
    ViewData["Title"] = "Home Page";
}

<br />
<br />
<br />
<h2>Push data to FleetPrime API</h2>

@if (ViewData["Success"] != null)
{
    <div class="alert alert-success">
        <strong>@ViewData["Success"]</strong>
    </div>
}
@if (ViewData["Error"] != null)
{
    <div class="alert alert-danger">
        <strong>@ViewData["Error"]</strong>
    </div>
}

<hr />

<div class="container">
    <div class="row">
        <div class="col-lg-7">
            <form asp-action="Save" autocomplete="off">

                <div class="form-group">
                    <label>Event Type</label><br />
                    <label class="radio-inline"><input type="radio" name="EventType" value="WASTE_MANAGEMENT_ACCEPT" checked onclick="$('#divExceptionDetails').hide()">ACCEPT</label>
                    <label class="radio-inline"><input type="radio" name="EventType" value="WASTE_MANAGEMENT_EXCEPTION" onclick="$('#divExceptionDetails').show()">REJECT</label>
                </div>

                <div class="form-group">
                    <label>VIN</label>
                    <input name="Vin" class="form-control" value="3BPDX20X4JF195741" />
                </div>

                <div class="form-group">
                    <label>Account Id</label>
                    <input name="AccountId" class="form-control" value="123456" />
                </div>

                <div class="form-group">
                    <label>Container Color</label>
                    <select name="ContainerColor" class="form-control">
                        <option selected>Red</option>
                        <option>Orange</option>
                        <option>Yellow</option>
                        <option>Green</option>
                        <option>Blue</option>
                        <option>Indigo</option>
                        <option>Violet</option>
                    </select>
                </div>

                <div class="form-group">
                    <label>Container Size</label>
                    <select name="ContainerSize" class="form-control">
                        <option selected>Small</option>
                        <option>Medium</option>
                        <option>Large</option>
                    </select>
                </div>

                <div class="form-group">
                    <label>Address</label>
                    <select name="Address" class="form-control">
                        @foreach (var obj in Model.Addresses)
                        {
                            <option selected="@(obj.Key==0 ? "selected": null)" value="@obj.Key"> Address @(obj.Key + 1) - @obj.Value.ToString()</option>
                        }
                    </select>
                </div>

                <div id="divExceptionDetails" style="display:none;">

                    <div class="form-group">
                        <label>Reject Type</label>
                        <select name="RejectReason" class="form-control">
                            @foreach (var obj in Model.RejectReasons)
                            {
                                <option selected value="@obj.Key">@obj.Key</option>
                            }
                        </select>
                    </div>

                    <div class="form-group">
                        <label>Notes</label>
                        <textarea class="form-control" name="Notes" rows="3"></textarea>
                    </div>

                    <div class="form-group">
                        <label>Picture URL 1</label>
                        <input class="form-control" name="PictureURL" rows="3" />
                    </div>

                    <div class="form-group">
                        <label>Picture URL 2</label>
                        <input class="form-control" name="PictureURL" rows="3" />
                    </div>

                    <div class="form-group">
                        <label>Picture URL 2</label>
                        <input class="form-control" name="PictureURL" rows="3" />
                    </div>
                </div>

                <div class="form-group">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                </div>

            </form>
        </div>

    </div>

</div>
