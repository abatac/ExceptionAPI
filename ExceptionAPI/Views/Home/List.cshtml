@model IEnumerable<ExceptionAPI.Data.WasteManagementEventEntity>

@{
    ViewData["Title"] = "List Event";
}

<br />
<br />
<br />
<h2>@ViewData["Title"]</h2>

<div>
    <h4>List all  Waste Management Records</h4>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Vin)

                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AccountId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EventId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EventType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ContainerColor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ContainerSize)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Latitude)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Longitude)
                </th>
                <th>
                    Address
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ExceptionDetails)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Vin)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AccountId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EventId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EventType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ContainerColor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ContainerSize)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Latitude)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Longitude)
                    </td>
                    <td>
                        <b>Street1</b>:  @Html.DisplayFor(modelItem => item.Street1) <br />
                        <b>Street2</b>:  @Html.DisplayFor(modelItem => item.Street2) <br />
                        <b>City</b>:  @Html.DisplayFor(modelItem => item.City) <br />
                        <b>State</b>:  @Html.DisplayFor(modelItem => item.State) <br />
                        <b>ZipCode</b>:  @Html.DisplayFor(modelItem => item.ZipCode) <br />
                        <b>Country</b>:  @Html.DisplayFor(modelItem => item.Country) <br />
                    </td>
                    <td>
                        <b>Type</b>:  @Html.DisplayFor(modelItem => item.ExceptionDetails.Type) <br />
                        <b>Description</b>:  @Html.DisplayFor(modelItem => item.ExceptionDetails.Description) <br />
                        <b>Notes</b>:  @Html.DisplayFor(modelItem => item.ExceptionDetails.Notes) <br />
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
</div>
